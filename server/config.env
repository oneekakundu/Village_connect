# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/villagestay
# For production: MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/villagestay

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (Resend - Free Email Service)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@villagestay.com

# Alternative Email Configuration (Gmail SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security Configuration
CORS_ORIGIN=http://localhost:5174
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Oracle Cloud Configuration
ORACLE_INSTANCE_IP=your-oracle-instance-ip
ORACLE_SSH_KEY=path-to-your-ssh-key 